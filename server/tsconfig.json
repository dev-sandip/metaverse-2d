{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "package.json"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }

}